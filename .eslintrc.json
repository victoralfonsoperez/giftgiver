{
    "extends": "airbnb",
    "rules": {
        "semi": ["off"],
        "quotes": ["error", "single"],
        "react/prefer-stateless-function": ["off", { "ignorePureComponents": false }],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    },
    "env": {
        "jest": true
    }
}